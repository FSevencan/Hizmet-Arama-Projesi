@using Proje.ViewModels;
@{
	ViewData["Title"] = "ResetPassword";
}
@model ForgetPasswordViewModel




<style>

	.breadcrumb {
		background-color: #4FD675;
	}

	.breadcrumb-item a {
		color: floralwhite;
	}

	
	.alert-info {
		height: 40px;
		text-align:center;
		line-height:40px;
	}

	.alert-success {
		background-color: green;
		color: white;
		height: 50px;
		text-align: center;
		line-height: 40px;
	}
</style>




<body>
	<div class="wrapper" style="margin-right:70px;">
		<div class="preloader"></div>


		<div class="dashboard_content_wrapper">
			<div class="dashboard dashboard_wrapper pr30 pr0-xl">

				<div class="dashboard__main pl0-md">
					<div class="dashboard__content hover-bgc-color">

						<div class="row">
							<div class="col-xl-12">


								@if (TempData["SuccessMessage"] != null)
								{
									<div class="alert-success" role="alert">
										@TempData["SuccessMessage"]
									</div>
								}
								else
								{
									<div class="alert-info">Şifre yenileme linki, e-posta adresinize gönderilecektir.</div>
								}

								<div class="ps-widget bgc-white bdrs4 p30 mb30 overflow-hidden position-relative">
									<div class="bdrb1 pb15 mb25">
										<h5 class="list-title">Şifre Yenile</h5>
									</div>
									<div class="col-lg-7">
										<div class="row">
											
											<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
											</div>
											<form method="post">
												<div class="row">
													<div class="col-sm-6">
														<div class="mb20">
															<label class="heading-color ff-heading fw500 mb10">Eski Şifre</label>
															<input asp-for="Email" type="text" class="form-control" id="PasswordOld" style="padding-right:30px;" placeholder="********" />
														</div>
														
													</div>


													<div class="col-md-12">
														<div class="text-start">

															<button type="submit" class="ud-btn btn-thm">Gönder<i class="fal fa-arrow-right-long"></i></button>
														</div>
													</div>
												</div>

											</form>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>

				</div>
			</div>
		</div>

	</div>
	<!-- Wrapper End -->

</body>
