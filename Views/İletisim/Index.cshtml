@model Proje.Models.İletisim


<body>
    <div class="wrapper ovh">
      

        <div class="body_content">
            <!-- Breadcumb Sections -->
            <section class="breadcumb-section wow fadeInUp mt40">
                <div class="cta-commmon-v1 cta-banner bgc-thm2 mx-auto maxw1700 pt120 pb120 bdrs16 position-relative overflow-hidden d-flex align-items-center mx20-lg">
                    
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-5">
                                <div class="position-relative wow fadeInUp" data-wow-delay="300ms">
                                    <h2 class="text-white">İletişim</h2>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Our Contact Info -->
            <section class="pt-0">
                <div class="container">
                    <div class="row wow fadeInUp" data-wow-delay="300ms">
                        <div class="col-lg-6">
                            <div class="position-relative mt40">
                                <div class="main-title">
                                    <h4 class="form-title mb25">Bizimle irtibatta kal.</h4>
                                   
                                </div>
                                <div class="iconbox-style1 contact-style d-flex align-items-start mb30">
                                    <div class="icon flex-shrink-0"><span class="flaticon-tracking"></span></div>
                                    <div class="details">
                                        <h5 class="title">Adres</h5>
                                        <p class="mb-0 text">Şişli <br> İstanbul</p>
                                    </div>
                                </div>
                                <div class="iconbox-style1 contact-style d-flex align-items-start mb30">
                                    <div class="icon flex-shrink-0"><span class="flaticon-call"></span></div>
                                    <div class="details">
                                        <h5 class="title">Phone</h5>
                                        <p class="mb-0 text">+(0) 212 000 00 00</p>
                                    </div>
                                </div>
                                <div class="iconbox-style1 contact-style d-flex align-items-start mb30">
                                    <div class="icon flex-shrink-0"><span class="flaticon-mail"></span></div>
                                    <div class="details">
                                        <h5 class="title">Email</h5>
                                        <p class="mb-0 text">info@proje.com</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="contact-page-form default-box-shadow1 bdrs8 bdr1 p50 mb30-md bgc-white">
                                <h4 class="form-title mb25">Mesajınızı İletin</h4>
                               
                               
                                <form asp-action="Index" id="contactForm" class="form-style1">
                                    <div class="row">
                                       
                                        <div class="col-md-6">
                                            <div class="mb20">
                                                <label class="heading-color ff-heading fw500 mb10" for="">Ad Soyad</label>
                                                <input asp-for="AdSoyad" type="text" class="form-control" id="İletisimAdSoyad" placeholder=" " required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb20">
                                                <label class="heading-color ff-heading fw500 mb10" for="">Email</label>
                                                <input asp-for="Email" type="email" class="form-control" id="İletisimMail" placeholder=" " required>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="mb20">
                                                <label class="heading-color ff-heading fw500 mb10" for="">Mesaj</label>
                                                <textarea class="form-control" asp-for="Mesaj" id="İletisimMesaj" placeholder=" " cols="30" rows="6" style="height:120px; " required></textarea>
                                               
                                                <span asp-validation-for="Mesaj" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="">
                                                <input type="submit" class="ud-btn btn-thm"></i>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Google Map -->
            <section class="p-0 wow fadeInUp" data-wow-delay="300ms">
                <div class="mx-auto maxw1700 bdrs16 position-relative mx20-lg">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24066.370731613184!2d28.968215586988865!3d41.06251456637236!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab685c86f5979%3A0x2519479e0fb398da!2zxZ5pxZ9saS_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1691838621551!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </section>

            <br />
            

        </div>
    
   </div>
</body>

<script>

    $('#contactForm').on('submit', function (event) {
        event.preventDefault();
        var form = this;

        $.ajax({
            type: $(form).attr('method'),
            url: $(form).attr('action'),
            data: $(form).serialize(),
            dataType: 'json',
            success: function (response) {
                if (response.success) {
                    Swal.fire({
                        title: response.message,  // Başlıkta gözükecek metni response.message olarak belirledik.
                        icon: 'success',
                        confirmButtonText: 'Tamam',
                        background: 'white',
                        width: '390px',
                        height: '180px',
                        confirmButtonColor: '#4FD675',
                        iconColor: '#4FD675'
                    }).then(function () {
                        form.reset();
                    });
                } else {
                    Swal.fire({
                        title: 'Hata!',
                        text: response.message,
                        icon: 'error',
                        confirmButtonText: 'Tamam',
                        background: 'white',
                        titleHtml: '<span style="color: #4FD675;">Hata!</span>',
                        html: '<span style="color:black;">' + response.message + '</span>',
                        confirmButtonColor: '#4FD675',
                        iconColor: '#4FD675'
                    });
                }
            }
        });
    });
</script>